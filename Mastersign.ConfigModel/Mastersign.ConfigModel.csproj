<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PublishRelease>true</PublishRelease>
    
    <Version>1.0.0.0</Version>

    <Title>Mastersign.ConfigModel</Title>
    <Product>Mastersign.ConfigModel</Product>
    <Description>YAML based configuration model for .NET applications</Description>
    <Authors>Tobias Kiertscher</Authors>
    <Copyright>Copyright © Tobias Kiertscher 2023</Copyright>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/mastersign/Mastersign.ConfigModel.git</RepositoryUrl>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://mastersign.github.io/Mastersign.ConfigModel/</PackageProjectUrl>
    <PackageTags>Configuration;YAML</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="7.0.0" />
    <PackageReference Include="YamlDotNet" Version="13.1.0" />
  </ItemGroup>

</Project>
